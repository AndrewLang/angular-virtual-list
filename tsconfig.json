{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,    
    "strictNullChecks": false,
    "baseUrl": "./src",
    "outDir": "./dist",
    "lib": [
      "dom",
      "es6"
    ],
    "types": [
      "node"
    ]
  },
  "files": [
    "./src/public_api.ts"
  ],
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "demo"
  ]
}